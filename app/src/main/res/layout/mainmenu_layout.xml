<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#ffffff"
    tools:context=".StartActivity">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="45dp"
        android:id="@+id/profile_action_bar"
        android:orientation="horizontal"
        android:background="#666666">

        <Button
            android:layout_width="45dp"
            android:layout_height="fill_parent"
            android:background="@drawable/profilknap"
            android:id="@+id/profile_knap"
            />

    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/menu_bar"
        android:layout_marginTop="45dp"
        android:weightSum="5"
        >


        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="1">

        <ImageButton
            android:layout_marginLeft="10dp"
            android:layout_gravity="center"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:background="@drawable/smiley"
            android:id="@+id/show_messages"

            />

        </LinearLayout>
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="fill_parent"
        android:layout_weight="1">
        <ImageButton
            android:layout_gravity="center"

            android:layout_width="45dp"
            android:layout_height="45dp"
            android:background="@drawable/treasure"
            android:id="@+id/show_toilets"
            android:layout_toRightOf="@+id/show_messages"

            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="fill_parent"
        android:layout_weight="1">

        <ImageButton
            android:layout_gravity="center"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:background="@drawable/newbutton"
            android:id="@+id/show_profile"
            android:layout_toRightOf="@+id/show_toilets"

            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="fill_parent"
        android:layout_weight="1">
        <ImageButton
            android:layout_gravity="center"

            android:layout_width="45dp"
            android:layout_height="45dp"
            android:background="@drawable/treasure"
            android:id="@+id/show_friends"
            android:layout_toRightOf="@+id/show_profile"

            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="fill_parent"
        android:layout_weight="1">
        <ImageButton
            android:layout_gravity="center"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:background="@drawable/treasure"
            android:id="@+id/show_shit"
            android:layout_toRightOf="@+id/show_friends"
            android:layout_marginRight="10dp"

            />
        </LinearLayout>


    </LinearLayout>
    <FrameLayout
        android:layout_marginTop="90dp"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:id="@+id/menus_fragment"
        tools:background="#0000ff">


    <android.support.v4.view.ViewPager
              android:layout_width="fill_parent"
              android:layout_height="fill_parent"
              android:id="@+id/menus"
              tools:background="#0000ff"
    />
    </FrameLayout>




    <FrameLayout
        android:layout_marginTop="90dp"
        android:id="@+id/fragment_profile"
        android:layout_width="300dp"
        android:layout_height="fill_parent"
        tools:background="#00ff00"
        android:layout_gravity="left"
        android:translationX="-300dp"/>



</FrameLayout>